<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C0340"
    tools:context=".ItemFragment">

    <!-- Main Title -->
    <TextView
        android:id="@+id/checklist_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="44dp"
        android:text="Boss Checklist"
        android:textColor="#37BB07"
        android:fontFamily="@font/andy_bold"
        android:textSize="40sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pre_hardmode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pre-Hardmode Bosses"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/andy_bold"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/checklist_intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ScrollView
        android:id="@+id/pre_hardmode_scroll"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/pre_hardmode_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHeight_max="0dp"
        android:background="@drawable/home_frames">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/hardmode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hardmode Bosses"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/andy_bold"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/pre_hardmode_scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/hardmode_scroll"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/hardmode_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHeight_max="0dp"
        android:background="@drawable/home_frames">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <!-- Add your Hardmode Boss items here -->
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>