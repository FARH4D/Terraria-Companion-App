<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C0340">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/help_intro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="How to use the Terraria Companion App"
                android:textColor="#37BB07"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/andy_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/step_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1) Go to the TModLoader Workshop on Steam and install the Terraria Companion Mod."
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:fontFamily="@font/andy_bold"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/help_intro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/step_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2) Enable the mod and enter any world. Open the Mod Settings and look at your IP address and port."
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:fontFamily="@font/andy_bold"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/step_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/step_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3) Enter the IP and port into the app in the format shown in the example (e.g., 192.168.0.43:12345)."
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:fontFamily="@font/andy_bold"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/step_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/step_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4) Press Connect. You are now connected!"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:fontFamily="@font/andy_bold"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/step_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/back_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Back"
                android:textColor="@android:color/white"
                android:backgroundTint="#185502"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/step_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>
