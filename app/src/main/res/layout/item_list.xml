<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C0340"
    tools:context=".ItemFragment">

    <TextView
        android:id="@+id/recipe_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="44dp"
        android:text="Items"
        android:textColor="#37BB07"
        android:fontFamily="@font/andy_bold"
        android:textSize="40sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/recipe_cats"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/recipe_intro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/cats_melee"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_melee"
                    android:contentDescription="Melee Weapons"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_ranged"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_ranged"
                    android:contentDescription="Ranged Weapons"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_mage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_mage"
                    android:contentDescription="Mage Weapons"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_summoner"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_summoner"
                    android:contentDescription="Summoning Weapons"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_throwing"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_throwing"
                    android:contentDescription="Throwing"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_pickaxe"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_pickaxe"
                    android:contentDescription="Pickaxes"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_axes"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_axe"
                    android:contentDescription="Axes"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_hammers"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_hammer"
                    android:contentDescription="Hammers"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_helmets"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_helmets"
                    android:contentDescription="Helmets"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_body"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_body"
                    android:contentDescription="Chest Armour"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_legs"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_legs"
                    android:contentDescription="Leggings"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_accessories"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_accessories"
                    android:contentDescription="Accessories"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_ammo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_ammo"
                    android:contentDescription="Ammo"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_blocks"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_blocks"
                    android:contentDescription="Blocks"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/cats_misc"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/item_cat_misc"
                    android:contentDescription="Miscellaneous"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp" />

            </LinearLayout>
        </HorizontalScrollView>

    </FrameLayout>

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="270dp"
        android:layout_height="33dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:background="#C5C4C4"
        android:ems="10"
        android:inputType="text"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_cats"
        app:layout_constraintBottom_toTopOf="@id/recipe_scroll"/>

        <ImageButton
            android:id="@+id/clear_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="25dp"
            android:background="@color/green"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Clear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_bar"
            app:layout_constraintBottom_toBottomOf="@id/search_bar" />

    <ScrollView
        android:id="@+id/recipe_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_frame"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <GridLayout
            android:id="@+id/recipe_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="6"
            android:padding="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"/>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/button_frame"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/nav_bar">

        <Button
            android:id="@+id/left_button"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="16dp"
            android:textSize="30sp"
            android:text="&lt;"
            android:textColor="@color/white"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:includeFontPadding="false"
            android:backgroundTint="#185502"
            />

        <Button
            android:id="@+id/center_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:textSize="26sp"
            android:fontFamily="@font/andy_bold"
            android:text="Search"
            android:textColor="@color/white"
            android:backgroundTint="#185502"
            />

        <Button
            android:id="@+id/right_button"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:textSize="30sp"
            android:text="&gt;"
            android:textColor="@color/white"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:includeFontPadding="false"
            android:backgroundTint="#185502"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="#232427"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/home_navbar"
                android:contentDescription="Home"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/nav_recipe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/recipe_navbar"
                android:contentDescription="Recipes"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp" />

            <ImageView
                android:id="@+id/nav_checklist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/checklist_navbar"
                android:contentDescription="Boss Checklist"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp" />

            <ImageView
                android:id="@+id/nav_beastiary"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/beastiary_navbar"
                android:contentDescription="Beastiary"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp" />
        </LinearLayout>

    </FrameLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>